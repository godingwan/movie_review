
<div class='row span12'>
  <div class='page-description-banner'>Movie Listings</div>
</div>

<table class='table'>
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Genre</th>
    <th>Director</th>
    <th>Summary</th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.title %></td>
    <td><%= movie.year %></td>
    <td><%= movie.genre %></td>
    <td><%= movie.director %></td>
    <td><%= movie.summary %></td>
    <td><%= link_to 'Details/Reviews', movie, :class => 'button btn-small btn-info' %></td>
  </tr>
<% end %>
