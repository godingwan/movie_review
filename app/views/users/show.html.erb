<div class="row">
	<h3>Last 3 Movies Added</h3>
	<table class="table table-striped">
		<tr>
			<td>Title</td>
			<td>Added at</td>
		</tr>
		<% @last_3_movies_added.each do |movie| %>
		<tr>
			<td><%= movie.title %></td>
			<td><%= movie.created_at %></td>
		</tr>
		<% end %>
	</table>
</div>

<div class="row">
  <h3>Last 3 Movies Viewed</h3>
  <table class="table table-striped">
    <tr>
      <td>Title</td>
      <td>Viewed at</td>
    </tr>
    <% @last_3_movies_viewed.each do |view| %>
    <tr>
      <td><%= link_to view.movie.title, movie_path(view.movie) %></td>
      <td><%= view.created_at %></td>
    </tr>
    <% end %>
  </table>
</div>

<div class="row">
  <h3>Last 3 Reviews Viewed</h3>

   <table class="table table-striped">
    <tr>
      <td>Review</td>
      <td>Viewed at</td>
    </tr>

    <% @last_3_reviews_viewed.each do |view| %>
    <tr>

      <td><%= link_to view.review.body, movie_review_path(view.review.movie, view.review) %></td>
      <td><%= view.created_at %></td>
    </tr>
    <% end %>
  </table>
</div>

<div class="row">
  <div class='span12'>
    <div class='three-box-titles'>Reviews I Have Liked</div>
    <table class="table table-striped">
      <% current_user.review_likes.each do |like| %>
        <tr>
          <td><%= link_to like.review.body, movie_review_path(like.review.movie, like.review)  %></td>
        </tr>
      <% end %>
    </table>
</div>

<div class="row">
  <div class='span12'>
    <div class='three-box-titles'>Movies I Have Liked</div>
    <table class="table">
      <% current_user.movie_likes.each do |like| %>
        <tr>
          <td><%= link_to like.movie.title, movie_path(like.movie)  %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

